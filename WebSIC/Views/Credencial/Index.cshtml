@model IEnumerable<Entity.Entities.Credencial>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Impressão de credencial</h1>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="table" width="100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Empresa.NomeFantasia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Pessoa.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Pessoa.CPF)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DataVencimento)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Empresa.NomeFantasia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Pessoa.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Pessoa.CPF)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataVencimento)
                            </td>
                            <td>
                                @Html.ActionLink("Imprimir", "Edit", new { id = item.IdCredencial }, new { @class = "btn btn-success" })
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-4">
        </div>
    </div>
</div>

<div class="modal" id="modal" role="dialog" data-backdrop="static" data-keyboard="false"></div>


@section Scripts{
    <script>

        $(document).ready(function () {
            Datatables("table");
        });

    </script>
}



