@model IEnumerable<Entity.Entities.TipoEmpresa>


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Tipos de Empresa</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="table" width="100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Descricao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TipoCracha.Descricao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ativo)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TipoCracha.Descricao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ativo)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.IdTipoEmpresa }, new { @class="btn btn-primary"}) |
                                    @Html.ActionLink("Excluir", "Delete", new { id = item.IdTipoEmpresa }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="form-group">
    <div class="row">
        <div class="col-md-4">
            @*<a class="btn btn-primary" onclick="onShowModal('Create')">Novo</a>*@
            <button class="btn btn-primary create">Novo </button>
        </div>
    </div>
</div>

<div class="modal" id="modal" role="dialog" data-backdrop="static" data-keyboard="false"></div>

<script src="~/Scripts/Index.js"></script>