@model IEnumerable<Entity.Entities.Empresa>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Empresa</h1>
    </div>
</div>

<table id="table" class="datatable" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RazaoSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeFantasia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CGC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RazaoSocial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeFantasia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CGC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    <a class="btn btn-primary" onclick="onShowModalEdit(@item.IdEmpresa)">Editar</a> |
                    <a class="btn btn-primary" onclick="onShowModalDelete(@item.IdEmpresa)">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="form-group">
    <div class="row">
        <div class="col-md-4">
            <a class="btn btn-primary" onclick="onShowModalCreate()">Novo</a>
        </div>
    </div>
</div>

<div class="modal" id="modal" role="dialog" data-backdrop="static" data-keyboard="false"></div>


@section Scripts{
    <script>
        $(document).ready(function () {
            //$('#table').DataTable();
            Datatables("table");

        });

         function onShowModalCreate() {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("Create", "Empresa")',
                cache: false,
                dataType: 'html',
                success: function (data) {
                    $('#modal').html(data);
                    $('#modal').modal('show');
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //TrataErroAjax(xhr);
                    alert("erro");
                }
            });
        };

        function onShowModalEdit(id) {

            var params = { id: id };

            $.ajax({
                type: 'GET',
                url: '@Url.Action("Edit", "Empresa")',
                data: params,
                cache: false,
                dataType: 'html',
                success: function (data) {
                    $('#modal').html(data);
                    $('#modal').modal('show');
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //TrataErroAjax(xhr);
                    alert("erro");
                }
            });
        };

        function onShowModalDetail(id) {

            var params = { id: id };

            $.ajax({
                type: 'GET',
                url: '@Url.Action("Details", "Empresa")',
                data: params,
                cache: false,
                dataType: 'html',
                success: function (data) {
                    $('#modal').html(data);
                    $('#modal').modal('show');
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //TrataErroAjax(xhr);
                    alert("erro");
                }
            });
        };


        function onShowModalDelete(id) {

            var params = { id: id };

            $.ajax({
                type: 'GET',
                url: '@Url.Action("Delete", "Empresa")',
                data: params,
                cache: false,
                dataType: 'html',
                success: function (data) {
                    $('#modal').html(data);
                    $('#modal').modal('show');
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //TrataErroAjax(xhr);
                    alert("erro");
                }
            });
        };

    </script>
}
