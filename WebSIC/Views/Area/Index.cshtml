@model IEnumerable<Entity.Entities.Area>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Áreas</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="table" width="100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Sigla)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descricao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Criacao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Criador)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Atualizacao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Atualizador)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ativo)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sigla)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Criacao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Criador)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Atualizacao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Atualizador)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ativo)
                                </td>
                                <td class="min">
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.IdArea }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.IdArea }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.IdArea })*@
                                    @*<a class="btn btn-primary" onclick="onShowModal('Edit', @item.IdArea)">Editar</a> |
                                        <a class="btn btn-warning" onclick="onShowModal('Details', @item.IdArea)">Detalhar</a> |
                                        <a class="btn btn-danger" onclick="onShowModal('Delete', @item.IdArea)">Excluir</a>*@
                                    <button class="btn btn-warning details" data-id="@item.IdArea">Detalhar<i class="glyphicon glyphicon-file"></i></button>
                                    <button class="btn btn-primary edit" data-id="@item.IdArea">Editar<i class="glyphicon glyphicon-edit"></i></button>
                                    <button class="btn btn-danger delete" data-id="@item.IdArea">Deletar<i class="glyphicon glyphicon-trash"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="form-group">
    <div class="row">
        <div class="col-md-4">
            <button class="btn btn-success create">Criar Nova Área <i class="glyphicon glyphicon-open"></i></button>
        </div>
    </div>
</div>

<div class="modal" id="modal" role="dialog" data-backdrop="static" data-keyboard="false"></div>

<script src="~/Scripts/Index.js"></script>
