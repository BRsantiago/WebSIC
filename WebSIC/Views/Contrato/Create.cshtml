@model WebSIC.Models.ContratoViewModel

<script src="/Scripts/jquery.mask.js"></script>
<script src="/Scripts/bootstrap-datepicker.js"></script>
<script src="/Scripts/bootstrap-datepicker.min.js"></script>

<div class="modal-dialog" style="margin-left: 490px !important;">
    <div class="modal-content" style="width: 782px !important;">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Novo Contrato</h4>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form-contrato" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.IdEmpresa)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Numero, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="InicioVigencia">Vigência</label>
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.InicioVigencia, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.InicioVigencia, "", new { @class = "text-danger" })
                        </div>

                        <label class="control-label col-md-1" for="InicioVigencia">até</label>
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.FimVigencia, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FimVigencia, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
            }
            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button id="btnSave" class="btn btn-primary" onclick="Salvar('#form-contrato')">Salvar</button>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript">

            $('#InicioVigencia').mask('00/00/0000');
            $('#FimVigencia').mask('00/00/0000');

            $("#InicioVigencia").datepicker({
                showOn: "button",
                format: 'dd/mm/yyyy',
                todayBtn: "linked",
                clearBtn: true,
                autoclose: true,
                todayHighlight: true
            });

            $("#FimVigencia").datepicker({
                showOn: "button",
                format: 'dd/mm/yyyy',
                todayBtn: "linked",
                clearBtn: true,
                autoclose: true,
                todayHighlight: true
            });

            var date = new Date();
            var today = new Date(date.getFullYear(), date.getMonth(), date.getDate());
            $('#InicioVigencia, #FimVigencia').datepicker('setDate', today);

        </script>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/app.js"></script>
}
