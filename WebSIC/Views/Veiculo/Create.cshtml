                    var val = $(this).val();
                    var options = "";
                    $.getJSON(
                        "@Url.Action("GetApolices", "Veiculo")", { idEmpresa: val },
                        function (data) {
                            $.each(data, function(index, item){
                                options += "<option value='" + item.Value + "'>" + item.Text + "</option>";
                            });
                            $("#Apolice_IdApolice").html(options);
                        });
