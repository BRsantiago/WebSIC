@model IEnumerable<Entity.Entities.Veiculo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Cursos</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="table" width="100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Empresa)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Apolice)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Marca)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Modelo)
                            </th>
                            <th>
                                Ano (Fab/Mod)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.AnoFabricacao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AnoModelo)
                            </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.Cor)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Placa)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Chassi)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.Observacao)
                            </th>*@
                            @*<th>
                                @Html.DisplayNameFor(model => model.Criacao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Criador)
                            </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.Atualizacao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Atualizador)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ativo)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Empresa.NomeFantasia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Apolice.Numero)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Marca)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Modelo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AnoFabricacao) / @Html.DisplayFor(modelItem => item.AnoModelo)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.AnoFabricacao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AnoModelo)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cor)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Placa)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Chassi)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.Observacao)
                                </td>*@
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.Criacao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Criador)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Atualizacao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Atualizador)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ativo)
                                </td>
                                <td class="min">
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.IdVeiculo }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.IdVeiculo }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.IdVeiculo })*@
                                    <button class="btn btn-warning details" data-id="@item.IdVeiculo">Detalhar<i class="glyphicon glyphicon-file"></i></button>
                                    <button class="btn btn-primary edit" data-id="@item.IdVeiculo">Editar<i class="glyphicon glyphicon-edit"></i></button>
                                    <button class="btn btn-danger delete" data-id="@item.IdVeiculo">Deletar<i class="glyphicon glyphicon-trash"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="form-group">
    <div class="row">
        <div class="col-md-4">
            <button class="btn btn-success create">Criar Novo Veículo <i class="glyphicon glyphicon-open"></i></button>
        </div>
    </div>
</div>

<div class="modal" id="modal" role="dialog" data-backdrop="static" data-keyboard="false"></div>

<script src="~/Scripts/Index.js"></script>