@model IEnumerable<Entity.Entities.Aeroporto>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Aeroporto</h1>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="table" width="100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Descricao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IATA)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ativo)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IATA)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ativo)
                                </td>
                                <td>
                                    <a class="btn btn-primary" onclick="onShowModalEdit(@item.IdAeroporto)">Editar</a> |
                                    <a class="btn btn-danger" onclick="onShowModalDelete(@item.IdAeroporto)">Excluir</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-4">
            <a class="btn btn-primary" onclick="onShowModalCreate()">Novo</a>
        </div>
    </div>
</div>

<div class="modal" id="modal" role="dialog" data-backdrop="static" data-keyboard="false"></div>


@section Scripts{
    <script>
        $(document).ready(function () {
            Datatables("table");
        });


         function onShowModalCreate() {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("Create", "Aeroporto")',
                cache: false,
                dataType: 'html',
                success: function (data) {
                    $('#modal').html(data);
                    $('#modal').modal('show');
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //TrataErroAjax(xhr);
                    alert("erro");
                }
            });
        };

        function onShowModalEdit(id) {

            var params = { id: id };

            $.ajax({
                type: 'GET',
                url: '@Url.Action("Edit", "Aeroporto")',
                data: params,
                cache: false,
                dataType: 'html',
                success: function (data) {
                    $('#modal').html(data);
                    $('#modal').modal('show');
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //TrataErroAjax(xhr);
                    alert("erro");
                }
            });
        };

        function onShowModalDetail(id) {

            var params = { id: id };

            $.ajax({
                type: 'GET',
                url: '@Url.Action("Details", "Aeroporto")',
                data: params,
                cache: false,
                dataType: 'html',
                success: function (data) {
                    $('#modal').html(data);
                    $('#modal').modal('show');
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //TrataErroAjax(xhr);
                    alert("erro");
                }
            });
        };


        function onShowModalDelete(id) {

            var params = { id: id };

            $.ajax({
                type: 'GET',
                url: '@Url.Action("Delete", "Aeroporto")',
                data: params,
                cache: false,
                dataType: 'html',
                success: function (data) {
                    $('#modal').html(data);
                    $('#modal').modal('show');
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //TrataErroAjax(xhr);
                    alert("erro");
                }
            });
        };

    </script>
}